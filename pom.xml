    <version>2.3.0-SNAPSHOT</version>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId> <!-- for dependencies + plugin config such as git.properties -->
        <version>2.3.9.RELEASE</version>
    </parent>
    <modules>
        <module>weblab-common</module>
    </modules>

    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </pluginRepository>
    </pluginRepositories>

    <properties>
        <!-- weblab libraries dependency management is defined here despite an apparent circular dependency for release.
           Things work because we don't try to load those artifacts. Dependency management is not validated by Maven -->
        <weblab-libraries.version>${project.version}</weblab-libraries.version>
        <batik.version>1.7</batik.version>

        <!-- common libraries -->
        <commons-beanutils.version>1.9.4</commons-beanutils.version>
        <commons-collections.version>3.2.2</commons-collections.version>
        <commons-fileupload.version>1.2.2</commons-fileupload.version>
        <commons-io.version>2.7</commons-io.version>

        <!-- spring versions -->
        <spring-security-oauth2.version>2.2.0.RELEASE</spring-security-oauth2.version>
        <spring-security-jwt.version>1.0.9.RELEASE</spring-security-jwt.version>
        <spring-mvc-cache-control.version>1.1.1-RELEASE</spring-mvc-cache-control.version>
        <spring-data-envers.version>1.0.2.RELEASE</spring-data-envers.version>

        <!-- others -->
        <aws-sdk.version>1.11.133</aws-sdk.version>
        <kie.version>6.1.0.Final</kie.version>
        <activiti.version>5.19.0.1</activiti.version>
        <guava.version>18.0</guava.version>

        <!-- maven properties -->
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>


        <!-- jackson - Spring 5 requires 2.9.x -->
        <jackson.version>2.9.10</jackson.version>
        <jackson-databind.version>2.9.10.8</jackson-databind.version> <!-- Note: doesn't include https://github.com/cambridgeweblab/jackson-databind/commit/54a988aba00b81d3664d5294827e3678c775152f -->
        <jackson-module-jsonSchema.version>2.9.10</jackson-module-jsonSchema.version>

    </properties>

